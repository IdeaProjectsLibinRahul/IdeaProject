<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_collections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="5dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_collections"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/bottom_bar"
        style="@style/BottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <tech.libin.rahul.ideaproject.views.widgets.button.FOSButton
            style="@style/BottomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_collection"
            android:text="@string/collection" />

        <tech.libin.rahul.ideaproject.views.widgets.button.FOSButton
            style="@style/BottomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_retention"
            android:text="@string/retention" />
    </LinearLayout>

</LinearLayout>