<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="BottomBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">3dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RowActivityName">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RowActivityTopRight">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RowActivityNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RowActivityBottomCenter">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RowActivityBottomRight">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="DialogDivider">
        <item name="android:background">#33000000</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="LoginEditText" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/button_back</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="LoginEditTextBottomBar" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginLeft">75dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="DetailsViewHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray2X</item>
    </style>

    <style name="DetailsName">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray2X</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray2X</item>

    </style>

    <style name="DetailsViewText">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="DetailsTitleViewText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/detail_title_back</item>

        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DetailsSubmitTitleViewText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/detail_title_submit_back</item>

        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DetailsEsclateName">
        <item name="android:textSize">23sp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray2X</item>
    </style>
    <style name="DetailsEsclatePhoneNum">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textColor">@color/gray2X</item>
    </style>

    <style name="DetailsButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_common_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DetailsFormItems">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>


    <style name="DetailsToolbar">
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/detail_head_back</item>
    </style>

    <style name="SubmitEditText">
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/submit_edit_text_border</item>
    </style>

</resources>
