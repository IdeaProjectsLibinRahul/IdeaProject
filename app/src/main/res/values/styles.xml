<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="BottomBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">3dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:textSize">18sp</item>
        <item name="fos_textview_font">metanoia</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LoginEditText" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/button_back</item>
        <item name="android:textColor">@android:color/white</item>

    </style>
    <style name="LoginEditTextBottomBar" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

</resources>
