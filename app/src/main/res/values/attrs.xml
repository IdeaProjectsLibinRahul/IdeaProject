<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FOSTextView">
        <attr name="fos_textview_font" format="enum">
            <enum name="geosans" value="0" />
            <enum name="metanoia" value="1" />
            <enum name="sansation" value="2" />
            <enum name="normal" value="3" />
        </attr>
        <attr name="fos_textview_fontstyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="bolditalic" value="2" />
            <enum name="italic" value="3" />
            <enum name="light" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FOSEditText">
        <attr name="fos_edittext_font" format="enum">
            <enum name="geosans" value="0" />
            <enum name="normal" value="1" />
        </attr>
        <attr name="fos_edittext_fontstyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="bolditalic" value="2" />
            <enum name="italic" value="3" />
            <enum name="light" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FOSButton">
        <attr name="fos_button_font" format="enum">
            <enum name="geosans" value="0" />
            <enum name="normal" value="1" />
        </attr>
        <attr name="fos_button_fontstyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="bolditalic" value="2" />
            <enum name="italic" value="3" />
            <enum name="light" value="4" />
        </attr>
    </declare-styleable>
</resources>